---
import NavBar from "../components/NavBar";
const { title } = Astro.props;
const year = new Date().getFullYear();
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `@hasanhaja | ${title}` : "@hasanhaja"}</title>
    <link rel="stylesheet" href="index.css" />
    <meta
      name="description"
      content="Fullstack portfolio web app built in Astro"
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      <header>
        <div
          class="px-4 pt-4 mx-auto max-w-screen-xl md:flex md:justify-between"
        >
          <div class="flex gap-2">
            <img
              class="w-20 flex-shrink object-contain"
              src="/logo.svg"
              alt="the fresh logo: a sliced lemon dripping with juice"
            />
            <h1
              class="text-3xl my-auto mx-0 content-center md:text-4xl xl:text-5xl"
            >
              <a href="/">@hasanhaja</a>
            </h1>
          </div>
          <NavBar client:load />
        </div>
      </header>
      <main>
        <div class="p-4 mx-auto max-w-screen-xl">
          <slot />
        </div>
      </main>
      <footer class="mt-auto bg-gray-200">
        <div class="px-4 pt-8 pb-4 mx-auto max-w-screen-xl">
          <h1 class="text-gray-600">
            {`Copyright \u00A9 ${year} Hasan Ali`}
          </h1>
        </div>
      </footer>
    </div>
  </body>
</html>
